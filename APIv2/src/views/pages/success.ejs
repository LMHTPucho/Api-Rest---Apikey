<!doctype html>
<html>

<head>
    <title>Google SignIn</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="jumbotron">
            <h1 class="text-primary  text-center"><span class="fa fa-user"></span> Profile Information</h1>
            <div class="row">
                <div class="col-sm-6">
                    <div class="well">
                        <p>
                            <strong>Id</strong>: <%= user.id %><br>
                                <strong>Email</strong>: <%= user.emails[0].value %><br>
                                    <strong>Name</strong>: <%= user.displayName %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="card" style="width: 40rem;">
                <div class="card-header">
                    API KEY:
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="container d-flex">
                            <div class="col-8">
                                <%= data.apiKey %>
                            </div>
                            <div class="col">
                                <form action="/updateUserKey" method="post">
                                    <input type="hidden" value="<%= user.id %>" name="userAuthId">
                                    <button type="submit" class="btn btn-primary">Refrescar Key</button>
                                </form>
                            </div>
                        </div>
                    </li>


                    <li class="list-group-item">
                        <div class="container d-flex">
                            <div class="col-8">
                                Permisos admin: <%= data.level %>
                            </div>
                            <div class="col">
                                <form action="/updateUserLevel" method="post">
                                    <input type="hidden" value="<%= user.id %>" name="userAuthId">
                                    <input type="hidden" value="<%= data.level %>" name="level">
                                    <button type="submit" class="btn btn-primary">Actualizar Level</button>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</body>

</html>